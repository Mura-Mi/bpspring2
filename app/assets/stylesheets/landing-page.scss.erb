@import "honoka/scss/honoka/variables";

.navbar.navbar-transparent {
  background: 0 0;
  border: 0;
  .navbar-toggle {
    color: $gray-lighter;
  }
  a {
    color: $gray-lighter;
  }
  a:hover {
    background: 0 0;
  }
  .dropdown-menu {
    background: 000;
  }
}

.intro-background {
    z-index                 : -1;
    background: linear-gradient(rgba(0,0,0, 0.5), rgba(0,0,0, 0.5)), url(<%= asset_path 'intro-bg.jpg' %>) no-repeat center center;
    height: 100%;
    background-size         : cover;
    position                : fixed;
    top                     : 0;
    left                    : 0;
    right                   : 0;
    bottom                  : 0;
}

.intro-header {
    text-align: center;
    color: #f0f0f0;
    background-size: cover;
    height: 100%;
    min-height: 900px;
}

.intro-message {
    position: relative;
    padding-top: 20%;
    padding-bottom: 20%;
}

.intro-message > h1 {
    margin: 0;
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
    font-size: 5em;
}

.intro-divider {
    width: 400px;
    border-top: 1px solid #f8f8f8;
    border-bottom: 1px solid rgba(0,0,0,0.2);
}

.bgh-separator-or {
  padding: 10px 0;
}

.intro-message > h3 {
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
}

@media(max-width:767px) {
    .intro-message {
        padding-bottom: 15%;
    }

    .intro-message > h1 {
        font-size: 3em;
    }

    ul.intro-social-buttons > li {
        display: block;
        margin-bottom: 20px;
        padding: 0;
    }

    ul.intro-social-buttons > li:last-child {
        margin-bottom: 0;
    }

    .intro-divider {
        width: 100%;
    }
}

.contents {
  background: white;
}

.descriptions {
  background: $gray-lighter;
}

.cap {
  height: 5em;
}

