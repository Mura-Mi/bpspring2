<%= form_for(@event_report) do |f| %>

  <div class="container">
    <div class="row">

      <!-- table -->
      <div class='col-md-5'>
        <% if @event %>
          <%= render(partial: 'events/event_table', object: @event) %>
        <% else %>
          <div class="form-group">
            <div><label class='control-label'>Event</label></div>
            <%= errors @event_report, :event %>
            <div><input type='text' class='ta form-control' placeholder="Search Event you've watched"></div>
          </div>
        <% end %>
      </div>

      <!-- summary and main comment -->
      <div class="col-md-7">
        <div class="form-group">
          <%= f.label :summary, class: 'control-label' %>
          <%= errors @event_report, :summary %>
          <%= f.text_field :summary, class: 'form-control', placeholder: 'Summary for this event' %>
        </div>
        <div class='form-group'>
          <%= f.label :comment, class: 'control-label' %>
          <%= errors @event_report, :comment %>
          <%= f.text_area :comment, class: 'form-control', placeholder: 'Comment', rows: 10 %>
        </div>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :event_id, id: 'bgh-event-report-event-id' %>
      </div>
    </div>

    <% if @event_report.event_photos.present? %>
      <div class="row already-uploaded-photos bgh-accent-bg">
        <label class="uploaded-photos-cap">Photos already Uploaded</label>
        <div class="col-md-12">
          <% @event_report.event_photos.each do |report_photo| %>
            <%= image_tag report_photo.photo.mini.url, class: 'img-rounded' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class='row'>
      <div class='col-md-12'>
        <%= content_tag :label do %>
          <% if @event_report.event_photos.empty? %>
            Upload Photos!
          <% else %>
            Upload More Photos!
          <% end %>
        <% end %>
        <%= f.file_field :event_photos, multiple: true, class: 'bgh-fileinput' %>
      </div>
    </div>

    <div class="row action">
      <div class="col-md-12">
        <div class='pull-right'>
          <%= f.submit "Post a Report", class: 'btn btn-primary' %>
          <%= button_to 'Back', event_reports_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
