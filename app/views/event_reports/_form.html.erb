<%= form_for(@event_report) do |f| %>

  <% if @event_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_report.errors.count, "error") %> prohibited this event_report from being saved:</h2>

      <ul>
      <% @event_report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class='col-md-5'>
        <%= render partial: 'events/event_table', object: @event %>
      </div>
      <div class="col-md-7">
        <div class='form-group'>
          <%= f.label :comment, class: 'control-label' %><br>
          <%= f.text_area :comment, class: 'form-control', placeholder: 'Comment', rows: 10 %>
        </div>
        <div style="display:none">
          <%= f.text_field :user_id %>
          <%= f.text_field :event_id %>
        </div>
        <div class='pull-right'>
          <%= f.submit "Post a Report", class: 'btn btn-primary' %>
          <%= button_to 'Back', event_reports_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
