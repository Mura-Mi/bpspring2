<% classAttr = 'grid-item bgh-event-report-preview' %>
<% classAttr << ' grid-item--2x' if event_report.comment.length > 40 %>
<% classAttr << " #{additional_class}" unless additional_class.empty? %>

<%= div_for(event_report, class: classAttr) do%>

  <div class='photo-and-title'>
    <% if event_report.event_photos.present? %>
      <%= image_tag event_report.event_photos[0].photo.mini.url, class: 'event_photo img-rounded' %>
    <% else %>
      <%= image_tag asset_path('no_image.png'), class: 'event_photo' %>
    <% end %>

    <div class="bgh-accent-bg-trans leaf-title">
      <span class='title'><h3><%= link_to event_report.summary || "By #{event_report.user.name}", event_report %></h3></span>
    </div>
  </div>

  <div class='leaf bgh-accent-bg-trans'>
    <% if show_event_info %>
      <div class='event-info'>
        <%= oneline_summary event_report.event %>
      </div>
    <% end %>
    <div class='comment'><%= event_report.comment %></div>
    By: <%= link_to event_report.user.name, event_report.user %>
  </div>

<% end %>
