<div class='bgh-event-day'>
  <% if day.date %>
    <% cls = 'day' %>
    <% cls << ' sat' if day.date.saturday? %>
    <% cls << ' sun' if day.date.sunday? %>
    <%= content_tag :span, day.date.mday, class: cls %>
  <% end %>
  <hr size=1>
  <% if day.events %>
    <% day.events.take(3).each do |event| %>
      <div><%= link_to event.abbreviation || event.name, event_path(event) %></div>
    <% end %>
  <% end %>
</div>
