<div class="month center-block">
  <div><%= content_tag :h1, @yearMonth.format %></div>
</div>

<div class="schedule">
  <table class='datalist hidden-xs table table-striped table-bordered'>
    <thead>
      <th>Mon</th>
      <th>Tue</th>
      <th>Wed</th>
      <th>Thu</th>
      <th>Fri</th>
      <th><span class='sat'>Sat</span></th>
      <th><span class='sun'>Sun</span></th>
    </thead>
    <% @cal.weeks.each do |week| %>
      <%= render partial: 'week', object: week %>
    <% end %>
  </table>
  <div class='actions form-inline'>
    <div class='form-group'>
      <%= button_to "< Prev", events_path,
        {params: {month: @yearMonth.previous.serialize }, method: :get, class: 'btn btn-default btn-sm'} %>
    </div>
    <div class='form-group'>
      <%= button_to "Create New Event", new_event_path, method: :get, class: 'btn btn-default' %>
    </div>
    <div class='form-group'>
      <%= button_to 'Next >', events_path,
        {params: {month: @yearMonth.next.serialize }, method: :get, class: 'btn btn-default btn-sm'} %>
    </div>
  </div>

</div>
