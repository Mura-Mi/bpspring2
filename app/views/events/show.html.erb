<div class="page-header">
  <span class="center-block text-center">
    <h1><%= @event.name %><h1>
  </span>
</div>



<div class="container">
  <div class='row'>

    <div class="col-md-5">
      <a class='thumbnail'>
        <img src='#' alt='No Image', class='img-thumbnail img-responsive'>
      </a>
    </div>
      <div class='col-md-6 col-md-offset-1'>
        <table class='table table-striped bgh-event-detail'>
          <tr>
            <td class='bgh-event-table-header'> Date </td>
            <td> <%= @event.event_date %> </td>
          </tr>
          <tr>
            <td class='bgh-event-table-header'> Comment </td>
            <td> <%= @event.comment %> </td>
          </tr>
          <tr>
          	<td class='bgh-event-table-header'> Place </td>
            <td> <%= link_to(@event.place.name, @event.place ) if @event.place %> </td>
          </tr>
        </table>
      </div>
  </div>
</div>

<nav>
  <ul class='pager'>
    <li><%= button_to 'Post a Report', new_event_report_path, class: 'btn btn-primary', method: :get %></li>
  </ul>
  <ul class='pager'>
    <li><%= link_to "All Events", events_path %></li>
    <li><%= link_to "Edit Event", edit_event_path %></li>
  </ul>
</nav>
