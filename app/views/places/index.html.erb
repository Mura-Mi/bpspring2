<div class="page-header"><h1>Listing Places</h1></div>

<div class='form-inline form-group'>
  <input type='text' class='form-control' id='bgh-place-filter' placeholder='Type the place name and press Enter' size='50'></input>
</div>

<hr>

<div class="grid places-grid">
  <% @places.each do |place| %>
    <%= content_tag :div, class: "grid-item place-grid thumbnail", name: place.name do %>
      <%= image_tag place.image.mini.url || asset_path('no_image.png'), class: 'img-rounded place-thumbnail' %>
      <div class='place-caption center-block text-center bgh-accent-bg-trans'>
        <%= link_to place.name, place %>
      </div>
    <% end %>
  <% end %>
</div>

<div class='buttons'>
  <%= button_to 'New Place', new_place_path, class: 'btn btn-info', method: :get %>
</div>
